<f:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:f="library://ns.feathersui.com/mxml"
	theme="feathers.themes.MetalWorksDesktopTheme"
	xmlns:components="feathers.extensions.toaster.*">
		
		<f:layout>
			<f:VerticalLayout/>
		</f:layout>
		<components:Toaster id="toaster" isCentered="true"/>
		<f:Button label="toaster" triggered="button_triggeredHandler(event)"/>
	
	<fx:Script>
		<![CDATA[			
			private function button_triggeredHandler( event:Event ):void
			{
				toaster.open( "some text" );
			}
		]]>
	</fx:Script>
</f:Application>